{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowUmdGlobalAccess": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
    },
    "lib": [
      "dom",
      "esnext",
    ],
    "types": ["minigame-api-typings", "./node_modules/pixi.js"],
  },
  
  "include": ["src", "type"],
  "exclude": ["node_modules", "dist"]
}
